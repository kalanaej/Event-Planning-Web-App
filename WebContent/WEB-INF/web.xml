<?xml version="1.0" encoding="UTF-8"?>
<element>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>OOP Employee Web App</display-name>
 
  <servlet>
    <servlet-name>AddPaymentServlet</servlet-name>
    <servlet-class>event.servlet.AddEmployeeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UpdatePaymentServlet</servlet-name>
    <servlet-class>event.servlet.UpdateEmployeeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeletePaymentServlet</servlet-name>
    <servlet-class>event.servlet.DeleteEmployeeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GetPaymentServlet</servlet-name>
    <servlet-class>event.servlet.GetEmployeeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ListPaymentServlet</servlet-name>
    <servlet-class>event.servlet.ListEmployeeServlet</servlet-class>
  </servlet>
 
  <servlet-mapping>
    <servlet-name>AddPaymentServlet</servlet-name>
    <url-pattern>/AddPaymentServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdatePaymentServlet</servlet-name>
    <url-pattern>/UpdatePaymentServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeletePaymentServlet</servlet-name>
    <url-pattern>/DeletePaymentServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GetPaymentServlet</servlet-name>
    <url-pattern>/GetPaymentServlet</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
    <servlet-name>ListPaymentServlet</servlet-name>
    <url-pattern>/ListPaymentServlet</url-pattern>
  </servlet-mapping>
 
 
  <welcome-file-list>
    <welcome-file>Payment.html</welcome-file>
    <welcome-file>Payment.htm</welcome-file>
    <welcome-file>Payment.jsp</welcome-file>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

</web-app>
</element>